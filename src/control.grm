if
  : "if" "(" expression ")" expression ("else" expression)?
  ;

loop
  : for
  : while
  : doWhile
  ;

for
  : "for" "(" valOrVar? (SimpleName | parameter) "in" expression ")" expression
  ;

while
  : "while" "(" expression ")" expression
  ;

doWhile
  : "do" expression "while" "(" expression ")"
  ;
